#include <iostream>
#include <string>
using namespace std;

string ReadString(){
	string UserString;
    cout << "Enter the string Examble ( Abdullah01 -> Abdullah02 ) : ";
    cin >> UserString;
	
	return UserString;
}

string InString(string UserString) {
	
	size_t NonDigit = UserString.find_last_not_of("0123456789");
	string Name = UserString.substr(0, NonDigit + 1);
	string Digit = UserString.substr(NonDigit + 1);
    
	int Number = Digit.empty() ? 0 :stoi(Digit);
	Number++;

	string NewNumber = to_string(Number);

    

		NewNumber.insert(0, Digit.size() - NewNumber.size(), '0');
	

	string NewUser = Name + NewNumber;

	return NewUser;
}

void PrintToUser() {
	string Read = ReadString();
	string Processing = InString(Read);

	cout << "The string after adding 1 : " << Processing << endl;

}
int main()
{
	PrintToUser();
}

